{
    "manifest_version": 3,
    "name": "EZ-Utilities",
    "version": "1.0.1",
    "icons": {
        "32": "favicon-16x16.png",
        "16": "favicon-32x32.png",
        "48": "favicon.ico",
        "192": "192x192.png",
        "180": "180x180.png",
        "128": "128x128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "description": "EZ Utilities - All-in-One Chrome Extension for daily tasks: color picking, to-do lists, password generation, and games.",
    "action": {
        "default_popup": "index.html",
        "default_icon" : "128x128.png"
    },
    "background": {
        "service_worker" : "background.js"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]

}