{
    "manifest_version": 3,
    "name": "EZ-Utilities",
    "version": "1.0.1",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "favicon-16x16.png",
            "32": "favicon-32x32.png",
            "48": "favicon.ico",
            "128": "128x128.png"
        }
    },
    "icons": {
        "16": "favicon-16x16.png",
        "32": "favicon-32x32.png",
        "48": "favicon.ico",
        "128": "128x128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "geolocation"
    ],
    "description": "EZ Utilities - All-in-One Chrome Extension for daily tasks: color picking, to-do lists, password generation, and games.",
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
